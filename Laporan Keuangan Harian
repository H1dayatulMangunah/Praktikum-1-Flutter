void main() {
  List<double> pemasukan = [500, 1000, 750];
  List<double> pengeluaran = [300, 450, 200];

  double totalMasuk = hitungTotal(pemasukan);
  double totalKeluar = hitungTotal(pengeluaran);

  double saldo = totalMasuk - totalKeluar;

  double rataMasuk = totalMasuk / pemasukan.length;
  double rataKeluar = totalKeluar / pengeluaran.length;

  print('=== Laporan Keuangan Harian ===');
  print('Total Pemasukan : Rp$totalMasuk.000');
  print('Total Pengeluaran : Rp$totalKeluar.000');
  print('Saldo Akhir : Rp$saldo.000');
  print('Rata-rata Pemasukan : Rp$rataMasuk.000');
  print('Rata-rata Pengeluaran : Rp$rataKeluar.000');
}

double hitungTotal(List<double> data) {
  double total = 0;
  for (var nilai in data) {
    total += nilai; 
  }
  return total;
}
